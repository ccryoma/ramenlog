<% provide(:title, '新規店舗登録') %>
<h1>新規店舗登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @shop, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name ,"店名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :address ,"住所" %>
      <%= f.text_field :address , class: 'form-control' %>

      <%= f.label :opening_ours ,"営業時間" %>
      <%= f.text_area :opening_ours , class: 'form-control' %>

      <%= f.label :sheets, "席数" %>
      <%= f.text_field :sheets , class: 'form-control' %>
      
      <%= f.label :parking ,"駐車場" %>
      <%= f.text_field :parking, class: 'form-control' %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>